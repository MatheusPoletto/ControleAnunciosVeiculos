@model ControleVeicular.Web.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Cadastro de Usuário";
}

<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card card0 border-0">
            <div class="row d-flex">
                
                <div class="col-lg-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="card2 card border-0 px-4 py-5">
                        <div class="row px-3">
                            @Html.LabelFor(model => model.Nome, new { @class = "mb-1" })
                            @Html.EditorFor(model => model.Nome, new { @class = "mb-4" })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                        <div class="row px-3">
                            @Html.LabelFor(model => model.Login, new { @class = "mb-1" })
                            @Html.EditorFor(model => model.Login, new { @class = "mb-4" })
                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                        </div>
                        <div class="row px-3">
                            @Html.LabelFor(model => model.Senha, new { @class = "mb-1" })
                            @Html.EditorFor(model => model.Senha, new { @class = "mb-4" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>
                        <div class="row px-3">
                            @Html.LabelFor(model => model.ConfirmacaoSenha, new { @class = "mb-1" })
                            @Html.EditorFor(model => model.ConfirmacaoSenha, new { @class = "mb-4" })
                            @Html.ValidationMessageFor(model => model.ConfirmacaoSenha, "", new { @class = "text-danger" })
                        </div>
                        <div class="row mb-3 px-3"> <button type="submit" class="btn btn-blue text-center">Entrar</button> </div>
                        <div class="row mb-4 px-3"> <small class="font-weight-bold">Já é cadastrado? <a class="text-danger " asp-area="" asp-controller="Usuarios" asp-action="Login">Faça login</a></small> </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>